<?xml version="1.0" encoding="utf-8"?>
<install type="template" version="1.5">

	<name>category_subcategories</name>
	<author>Octopoos</author>
	<creationDate>November 2009</creationDate>
	<authorEmail>contact@seblod.com</authorEmail>
	<authorUrl>http://www.seblod.com</authorUrl>
	<copyright>Copyright (C) 2012 SEBLOD. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<version>1.8.5</version>
	<description>Category &amp; Subcategories Content Template (Custom, 2 Layouts) - SEBLOD 1.x</description>

	<files>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>params.ini</filename>
		<filename>params.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_thumbnail.png</filename>
		<filename>css/index.html</filename>
		<filename>css/administrator.css</filename>
		<filename>css/site.css</filename>
		<filename>images/index.html</filename>
	</files>

	<positions>
		<position />
	</positions>

	<params>
		<param type="spacer" default="&lt;b&gt;# CATEGORY PARAMS&lt;/b&gt;" />
		<param name="categoryContent" type="radio" default="desc" label="Category Content" description="Select Category Parent Content">
			<option value="desc">Description</option>
			<option value="image">Image</option>
		</param>
		<param type="spacer" default=" " />
		<param type="spacer" default="&lt;b&gt;# SUBCATEGORIES PARAMS&lt;/b&gt;" />
		<param name="subcategoriesLayout" type="list" default="list" label="Subcategories Layout" description="Select Subcategories Layout">
			<option value="catalog">Catalog</option>
			<option value="list">List</option>
		</param>
		<param name="columnNum" type="list" default="1" label="Column Num" description="Select Subcategories Column Num">
			<option value="1">1</option>
			<option value="2">2</option>
		</param>
		<param name="pxLeftMargin" type="text" default="100" label="Left Margin (Pixels)" description="Edit Left Margin (Pixels)" />
		<param name="pxIntervalMargin" type="text" default="100" label="Interval Margin (Pixels)" description="Edit Interval Margin (Pixels)" />
		<param type="spacer" default="&lt;b&gt; - Catalog Layout &lt;/b&gt;" />
		<param name="titleCatalogLayout" type="list" default="top" label="Title Position" description="Select Title Position">
			<option value="top">Top</option>
			<option value="bottom">Bottom</option>
			<option value="hide">Hide</option>
		</param>
		<param type="spacer" default="&lt;b&gt; - List Layout &lt;/b&gt;" />
		<param name="styleListLayout" type="list" default="none" label="List Style" description="Select List Style">
			<option value="lower-alpha">Alpha Lower</option>
			<option value="upper-alpha">Alpha Upper</option>
			<option value="circle">Circle</option>
			<option value="decimal">Decimal</option>			
			<option value="disc">Disc</option>
			<option value="none">None</option>
			<option value="lower-roman">Roman Lower</option>
			<option value="upper-roman">Roman Upper</option>
			<option value="square">Square</option>
		</param>
		<param type="spacer" default=" " />
		<param type="spacer" default="&lt;b&gt;# ALPHA LIST PARAMS&lt;/b&gt;" />
		<param name="alphaList" type="radio" default="0" label="Alpha List" description="Show/Hide Alpha List">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>

	<locations>
		<location />
	</locations>
	
</install>